<form method="post" action="{{ path('app_chantier_delete', {'id': chantier.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce chantier ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chantier.id) }}">
    <button type="submit" class="btn btn-sm btn-danger">
        Supprimer
    </button>
</form>