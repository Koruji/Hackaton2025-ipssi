{% extends 'base.html.twig' %}

{% block title %}Edit Chantier{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <div class="show-chantier m-4 rounded p-4">
            <h3 class="text-center">Modification du chantier</h3>
            {{ include('chantier/_form.html.twig', {'button_label': 'Sauvegarder'}) }}
        </div>
    </div>

    <form method="post">
        <input type="hidden" name="form_type" value="add_competence">

        <label for="competence">Compétence</label>
        <select name="competence" id="competence" required>
            <option value="">-- Sélectionnez une compétence --</option>
            {% for competence in competences %}
                <option value="{{ competence.id }}">{{ competence.nom }}</option>
            {% endfor %}
        </select>

        <button type="submit">Ajouter la compétence</button>
    </form>



{% endblock %}
