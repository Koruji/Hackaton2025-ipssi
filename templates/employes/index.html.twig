{% extends 'base.html.twig' %}

{% block title %}Employes index{% endblock %}

{% block body %}
    <h1>Employes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Disponible</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employe in employes %}
            <tr>
                <td>{{ employe.id }}</td>
                <td>{{ employe.email }}</td>
                <td>{{ employe.roles ? employe.roles|json_encode : '' }}</td>
                <td>{{ employe.password }}</td>
                <td>{{ employe.nom }}</td>
                <td>{{ employe.prenom }}</td>
                <td>{{ employe.disponible ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_employes_show', {'id': employe.id}) }}">show</a>
                    <a href="{{ path('app_employes_edit', {'id': employe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_employes_new') }}">Create new</a>
{% endblock %}
