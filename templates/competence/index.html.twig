{% extends 'base.html.twig' %}

{% block title %}Competence index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="show-chantier m-4 rounded p-4">
            <a class="btn rounded-pill" style="background-color: #ff863f; opacity: 0.85;" href="{{ path('app_home_admin') }}"><i class="bi bi-arrow-left"></i></a>
            <h1 class="fw-bold text-center">Toutes les Compétences</h1>

            <div class="d-flex justify-content-between my-3">
                <a href="{{ path('app_competence_new') }}" class="btn btn-primary">
                    Nouvelle Compétence
                </a>
            </div>

            <table class="table table-bordered text-center bg-white mt-3">
                <thead class="thead-light">
                    <tr>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for competence in competences %}
                    <tr>
                        <td>{{ competence.nom }}</td>
                        <td>
                            <a href="{{ path('app_competence_edit', {'id': competence.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                            {{ include('competence/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-muted text-center">Aucune compétence trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
