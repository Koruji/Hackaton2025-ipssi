{% extends 'base.html.twig' %}

{% block title %}Chantier index{% endblock %}

{% block body %}
    <h1>Chantier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>DebutTravaux</th>
                <th>FinTravaux</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chantier in chantiers %}
            <tr>
                <td>{{ chantier.id }}</td>
                <td>{{ chantier.nom }}</td>
                <td>{{ chantier.adresse }}</td>
                <td>{{ chantier.debutTravaux ? chantier.debutTravaux|date('Y-m-d') : '' }}</td>
                <td>{{ chantier.finTravaux ? chantier.finTravaux|date('Y-m-d') : '' }}</td>
                <td>{{ chantier.status }}</td>
                <td>
                    <a href="{{ path('app_chanter_test_show', {'id': chantier.id}) }}">show</a>
                    <a href="{{ path('app_chanter_test_edit', {'id': chantier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chanter_test_new') }}">Create new</a>
{% endblock %}
